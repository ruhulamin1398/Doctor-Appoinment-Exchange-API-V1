<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Word Categories</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #030710, #09055d);
      color: #fff;
    }

    .container {
      padding-top: 50px;
    }

    .word-container {
      margin-top: 20px;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">Word Categories</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% allWords.forEach(category => { %>
          <li class="nav-item">
            <a class="nav-link" href="#" onclick="loadWords('<%= category.category %>')"><%= category.category %></a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="word-container">
      <h2 id="category-title">Select a category to view words.</h2>
      <div id="words"></div>
      <div class="text-center mt-4">
        <button class="btn btn-primary" id="prev-btn">Previous</button>
        <button class="btn btn-primary" id="next-btn">Next</button>
      </div>
    </div>
  </div>

  <!-- Add Bootstrap JS and jQuery script links -->
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // JavaScript/jQuery for handling menu and buttons
    let currentCategoryIndex = 0;
let allWords = <%- JSON.stringify(allWords) %>;

    function loadWords(category) {
      const categoryIndex = allWords.findIndex(item => item.category === category);
      currentCategoryIndex = categoryIndex;
      const words = allWords[categoryIndex].items.join(', ');
      $('#category-title').text(`Words in ${category}`);
      $('#words').html(`<p>${words}</p>`);
    }

    function updateCategory(direction) {
      currentCategoryIndex += direction;
      currentCategoryIndex = Math.max(0, Math.min(currentCategoryIndex, allWords.length - 1));
      const category = allWords[currentCategoryIndex].category;
      loadWords(category);
    }

    $(document).ready(function () {
      // Initial load
      loadWords(allWords[0].category);

      // Button click events
      $('#prev-btn').click(function () {
        updateCategory(-1);
      });

      $('#next-btn').click(function () {
        updateCategory(1);
      });
    });
  </script>
</body>

</html>
